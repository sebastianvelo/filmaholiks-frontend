{
  "extends": "./tsconfig.paths.json",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2018"
    ],
    "jsx": "react-jsx",
    "target": "ES5",
    "types": [
      "react",
      "react-dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true
  }
}